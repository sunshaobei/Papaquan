<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/public_title_2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f8f8f8" />

    <FrameLayout
        android:id="@+id/head_icon_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:drawablePadding="34.5dp"
            android:text="头像"
            android:textColor="@color/register_colors" />

        <ImageView
            android:id="@+id/head_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/default_icon_zheng" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:id="@+id/make_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="昵称"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/result_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="ID"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/id_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:onClick="level"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="等级"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/mine_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:id="@+id/bind_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="绑定微信"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/wx_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:id="@+id/bind_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="绑定手机号"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/phone_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:id="@+id/kid_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="个性签名"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/signature_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:ellipsize="end"
            android:maxEms="8"
            android:maxLines="1"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#f8f8f8" />

    <FrameLayout
        android:id="@+id/sex_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="性别"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/sex_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:onClick="make_address"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="地区"
            android:textColor="@color/register_colors" />

        <TextView
            android:id="@+id/address_per_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

    <FrameLayout
        android:id="@+id/mine_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="11.3dp"
        android:paddingTop="11.3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16.5dp"
            android:text="我的地址"
            android:textColor="@color/register_colors" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            android:drawablePadding="4.5dp"
            android:drawableRight="@drawable/point_right"
            android:textColor="@color/message" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f8f8f8" />

</LinearLayout>