<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_owncoin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/title_color"
            android:orientation="horizontal"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.lib_sunshaobei2017.widget.ScrollViewExtend
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                             />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/viewpager"
                            android:background="#50000000"
                            android:paddingBottom="8dp"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:text="todo"
                            android:textColor="@color/white"
                            android:textSize="11dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/title_color">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="25dp"
                            android:paddingBottom="3dp"
                            android:text="金币"
                            android:textColor="@color/white"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/text1"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@+id/text1"
                            android:text="5000"
                            android:textColor="@color/white"
                            android:textSize="23dp" />

                        <RelativeLayout
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/text2"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@+id/text2">

                            <TextView
                                android:id="@+id/text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="36.99元"
                                android:textColor="@color/white"
                                android:textSize="11dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_0.5"
                                android:layout_alignLeft="@+id/text4"
                                android:layout_alignRight="@+id/text4"
                                android:layout_centerVertical="true"
                                android:background="@color/white" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/num_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/text3"
                            android:layout_below="@+id/text3"
                            android:layout_marginTop="2dp"
                            android:text="693221人关注"
                            android:textColor="@color/white"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/tvbg_coin66000000"
                            android:paddingBottom="9dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="9dp"
                            android:text="金币不足"
                            android:textColor="@color/white"
                            android:textSize="13dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F2F2F2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="14.5dp"
                            android:layout_marginTop="9dp">

                            <TextView
                                android:id="@+id/text5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余: "
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/sytv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24156"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="份"
                                android:textColor="@color/black"
                                android:textSize="13dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ydhtv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="501541"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人已兑换"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="11dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="11dp"
                        android:text="规则说明"
                        android:textColor="@color/title_color"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rule" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="11dp"
                        android:text="商品简介"
                        android:textColor="@color/title_color"
                        android:textSize="14dp" />

                    <WebView
                        android:id="@+id/web_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </WebView>

                    <TextView
                        android:id="@+id/nomore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:paddingLeft="15dp"
                        android:visibility="gone"
                        android:paddingRight="15dp"
                        android:paddingTop="7dp"
                        android:text="没有更多介绍"
                        android:textColor="#3A3A3A"
                        android:textSize="13dp" />

                </LinearLayout>

            </com.example.lib_sunshaobei2017.widget.ScrollViewExtend>

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#00000000">

                <View
                    android:id="@+id/titlebg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0"
                    android:background="@color/title_color" />

                <ImageView
                    android:id="@+id/finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/finish_2" />

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/home_2" />

            </RelativeLayout>

        </FrameLayout>

</LinearLayout>
