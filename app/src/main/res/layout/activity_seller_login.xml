<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seller_login"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="xm.ppq.papaquan.View.Life.sellerlogin.SellerLoginActivity">

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/title_color"
        android:visibility="gone"
        android:layout_height="1dp"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/title_color"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/white_finish"
            android:layout_marginLeft="5dp"
            android:onClick="finish"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="商户登录"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:onClick="share"
            android:src="@drawable/white_share"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:focusable="true"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="26px"
            android:paddingBottom="26px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="商户账号"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="wrap_content"
            android:textSize="30px"
            android:background="@color/white"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColorHint="#c9c9c9"
            android:hint="输入你的商户账号"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_view"/>

    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="26px"
            android:paddingBottom="26px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="登录密码"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:textSize="30px"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColorHint="#c9c9c9"
            android:hint="输入登录密码"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/redeye"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="80px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="确认登陆"
        android:onClick="loginsure"
        android:textColor="@color/white"
        android:textSize="34px"
        android:background="@drawable/tvbg_sellerlogin"
        android:padding="30px"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="58px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="注册商户"
        android:onClick="goregist"
        android:textColor="@color/title_color"
        android:textSize="34px"
        android:background="@drawable/tvbg_sellerlogin2"
        android:padding="30px"
        android:gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>