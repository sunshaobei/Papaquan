<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rede_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/default_icon" />

                <TextView
                    android:id="@+id/rede_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/show_news_text_view"
                    android:padding="2dp"
                    android:text="关注TA"
                    android:textColor="#f86e1a"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/trend_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="啪啪圈"
                        android:textColor="#f86e1a"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/level_review"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/rede_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:textColor="#7a7a7a"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/rede_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <xm.ppq.papaquan.Tool.customview.CustomImageView
                    android:id="@+id/rede_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/rede_love_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:src="@drawable/love_false" />

            <TextView
                android:id="@+id/rede_love_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingRight="10dp"
                android:text="0"
                android:textColor="@color/trend_red" />

            <ImageView
                android:id="@+id/rede_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="3dp"
                android:paddingRight="10dp"
                android:src="@drawable/punglun_number" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>