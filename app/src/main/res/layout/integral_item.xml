<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/gold_icon"
        android:layout_width="65dp"
        android:layout_height="65dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gold_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/gold_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#7a7a7a"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/gold_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/shopping_left"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:textColor="@color/Red"
            android:textSize="12sp" />

    </LinearLayout>

    <xm.ppq.papaquan.Tool.KtVipTextView
        android:id="@+id/duihuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:background_type="SCARE_BUYING" />

</LinearLayout>