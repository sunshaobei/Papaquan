<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/trend_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_icon" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/aaa">

            <LinearLayout
                android:id="@+id/ccc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trend_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="啪啪圈"
                    android:textColor="#5b6a91"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/trend_level"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/follow_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="18dp"
                    android:padding="2dp"
                    android:text="+关注"
                    android:textColor="#f86e1a"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/trend_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ccc"
                android:layout_marginTop="10dp"
                android:textColor="#7a7a7a"
                android:textSize="13sp" />

        </RelativeLayout>

    </RelativeLayout>

    <xm.ppq.papaquan.Tool.TextView.SpanTextView
        android:id="@+id/topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp" />

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="3dp">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.alibaba.mobileim.fundamental.widget.NoScrollGridView
                android:id="@+id/gd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:horizontalSpacing="5dp"
                android:listSelector="@color/white"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="5dp"
                android:visibility="gone" />

            <xm.ppq.papaquan.Tool.customview.CustomImageView
                android:id="@+id/custom_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/trend_start_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/video_start"
                android:visibility="gone" />

        </RelativeLayout>

    </FrameLayout>


    <TextView
        android:id="@+id/money_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_zanshang_view"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="赞赏"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/trend_admire_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="0人赞赏"
        android:textColor="#999999"
        android:textSize="10sp" />

    <xm.ppq.papaquan.Tool.shownews.NoScrollGridView
        android:id="@+id/discuss_icon_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="8" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/trend_read_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="阅读：0"
            android:textColor="#999999"
            android:textSize="10.5sp" />

        <TextView
            android:id="@+id/trend_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="#5b6a91"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/trend_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:text="举报TA"
            android:textColor="#0086e6"
            android:textSize="10.5sp"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/like_num_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/love_discuss" />

        <TextView
            android:id="@+id/trend_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textColor="#576c9a"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/trend_like_image"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/bottom_to_re" />

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="#e4e4e4" />

    <LinearLayout
        android:id="@+id/advert_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f9f9f9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#e4e4e4" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/advert_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/advert_text_view"
                android:padding="5dp"
                android:text="广告推送"
                android:textColor="@color/white"
                android:textSize="9sp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="#e4e4e4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f9f9f9" />

    </LinearLayout>

    <View
        android:id="@+id/line22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="#e4e4e4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discount_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:text="评论"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trend_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13.5dp"
            android:drawableLeft="@drawable/discuss"
            android:drawablePadding="5dp"
            android:text="最新"
            android:textColor="#999999"
            android:textSize="14sp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/top_error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="暂无更多"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>