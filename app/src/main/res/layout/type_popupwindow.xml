<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/one_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/biz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="商业商户"
            android:textColor="#333333"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/biz_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="76dp"
            android:layout_toRightOf="@+id/biz_text"
            android:src="@mipmap/not_red_select"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="#e4e4e4" />

    <RelativeLayout
        android:id="@+id/two_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/company_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:text="企业/政府机构"
            android:textColor="#333333"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/company_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/company_text"
            android:src="@mipmap/not_red_select"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#e4e4e4" />

    <TextView
        android:id="@+id/type_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="17dp" />

</LinearLayout>