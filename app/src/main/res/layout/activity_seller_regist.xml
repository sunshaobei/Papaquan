<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seller_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    tools:context="xm.ppq.papaquan.View.Life.sellerregist.SellerRegistActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@color/title_color"
        android:id="@+id/bar"
        android:layout_height="1dp"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/title_color"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/white_finish"
            android:layout_marginLeft="5dp"
            android:onClick="finish"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="34px"
            android:textColor="@color/white"
            android:text="注册商户账号"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:onClick="share"
            android:src="@drawable/white_share"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <EditText
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:background="#FDEAC5"
        android:textSize="30px"
        android:padding="22px"
        android:gravity="center"
        android:textColor="#ec4706"
        android:text="您还没有商户，需要注册一个新的商户账号!"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="26px"
            android:paddingBottom="26px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="商户账号"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:textSize="30px"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/black"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColorHint="#c9c9c9"
            android:hint="至少4个以上字幕或者数字组成"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="30px"
        android:layout_marginTop="0.5dp"
        android:paddingRight="30px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="26px"
            android:paddingBottom="26px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="设置密码"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:textSize="30px"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColorHint="#c9c9c9"
            android:hint="至少4个以上字幕或者数字组成"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/redeye"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10px"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="26px"
            android:paddingBottom="26px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="商户账号"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:textSize="30px"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/black"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColorHint="#c9c9c9"
            android:hint="至少4个以上字幕或者数字组成"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:paddingTop="26px"
            android:paddingBottom="26px"
            android:textSize="30px"
            android:textColor="@color/black"
            android:text="商户账号"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="wrap_content"
            android:textSize="30px"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@color/white"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColorHint="#c9c9c9"
            android:hint="至少4个以上字幕或者数字组成"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="80px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="完成注册"
        android:textColor="@color/white"
        android:onClick="registcomplete"
        android:textSize="34px"
        android:background="@drawable/tvbg_sellerlogin"
        android:padding="30px"
        android:gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>