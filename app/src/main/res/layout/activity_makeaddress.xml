<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_view"
    android:orientation="vertical">

    <include layout="@layout/public_title_2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="收货人"
            android:textColor="@color/news_text"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="13dp"
            android:background="@android:color/transparent"
            android:hint="名字"
            android:singleLine="true"
            android:textColorHint="@color/register_colors"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="手机号码"
            android:textColor="@color/news_text"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="13dp"
            android:background="@android:color/transparent"
            android:hint="11位手机号码"
            android:singleLine="true"
            android:textColorHint="@color/register_colors"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15" />

    <LinearLayout
        android:id="@+id/minute_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="20dp"
            android:text="详细地址"
            android:textColor="@color/news_text"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@android:color/transparent"
                android:hint="城市"
                android:maxLines="1"
                android:textColor="@color/register_colors"
                android:textSize="@dimen/sp_15" />

            <EditText
                android:id="@+id/street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:hint="街道门牌信息"
                android:maxLines="1"
                android:textColor="@color/register_colors"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="邮政编码"
            android:textColor="@color/news_text"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/postcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="13dp"
            android:background="@android:color/transparent"
            android:hint="邮政编码"
            android:singleLine="true"
            android:textColorHint="@color/register_colors"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

</LinearLayout>