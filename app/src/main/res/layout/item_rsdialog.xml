<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_convertiondialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="密码核销"
                android:textColor="@color/title_color"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="扫码核销"
                android:textColor="@color/black"
                android:textSize="30px" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_centerVertical="true"
                android:background="@color/line_view" />

            <com.example.lib_sunshaobei2017.widget.ViewPagerIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </RelativeLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginLeft="56px"
            android:layout_marginRight="56px"
            android:layout_marginTop="84px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56px"
            android:layout_marginRight="56px"
            android:layout_marginTop="28px"
            android:orientation="horizontal">

            <EditText
                android:layout_width="238px"
                android:layout_height="wrap_content"
                android:hint="备注消费金额"
                android:paddingBottom="27px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="27px"
                android:textColorHint="#999999"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38px"
                android:text="折后金额"
                android:textColor="#999999"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="0.00元"
                android:textColor="@color/title_color"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56px"
                android:layout_weight="1"
                android:hint="商家输入核销密码"
                android:paddingBottom="27px"
                android:paddingLeft="20px"
                android:paddingTop="27px"
                android:textColorHint="#999999"
                android:textSize="30px" />

            <TextView
                android:layout_width="178px"
                android:layout_height="80px"
                android:layout_marginLeft="52px"
                android:layout_marginRight="56px"
                android:background="@drawable/tvbg_resdialog"
                android:gravity="center"
                android:text="确认使用"
                android:textColor="@color/white"
                android:textSize="30px" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:src="@mipmap/close_white" />

</RelativeLayout>
