<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Red"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:orientation="vertical">

        <include layout="@layout/public_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@android:color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/bind_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:padding="@dimen/dp_10"
                android:textColorHint="@color/register_colors"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/reg_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bind_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/identifying_code"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:padding="@dimen/dp_10"
                    android:textColorHint="@color/register_colors"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="@dimen/dp_0.5"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/reg_line" />

                <Button
                    android:id="@+id/code_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null"
                    android:padding="@dimen/dp_5"
                    android:text="获取验证码"
                    android:textColor="@color/register_colors" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bind_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/register_button"
            android:text="完成"
            android:textColor="#80FFFFFF"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

</FrameLayout>